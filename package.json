{
  "name": "riot-ecosystem",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "css-loader": "^0.28.9",
    "riot": "^3.9.0",
    "riot-route": "^3.1.3",
    "riot-tag-loader": "^2.0.2",
    "siimple": "^3.1.0-beta"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "gh-pages": "^1.1.0",
    "imagemin-cli": "^3.0.0",
    "npm-run-all": "^4.1.2",
    "object-assign": "^4.1.1",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "pug": "^2.0.0-rc.4",
    "riot-hot-reload": "^1.0.0",
    "rollup": "^0.56.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-riot": "^2.0.0",
    "rollup-plugin-server": "^0.7.0",
    "sass-loader": "^6.0.7"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "run-s build:clean build:prepare build:html build:img build:font build:tinymce build:css watch",
    "build:img": "imagemin public/img/**/* --out-dir=dist/img",
    "build:font": "cp -r public/font dist/font",
    "build:js": "run-s build:js:bundle build:js:minify",
    "build:js:bundle": "rollup -c rollup.config.js",
    "build:js:minify": "uglifyjs dist/js/app.js --comments --mangle -o dist/js/app.min.js --source-map url=app.min.js.map",
    "build:css": "run-s build:css:bundle build:css:minify",
    "build:css:bundle": "postcss src/css/app.css -o dist/css/app.css",
    "build:css:minify": "csswring dist/css/app.css dist/css/app.min.css",
    "watch": "run-p watch:html watch:js watch:css",
    "watch:html": "chokidar 'public/*.pug' -c 'npm run build:html'",
    "watch:js": "rollup -c rollup.local.config.js --watch",
    "watch:css": "chokidar 'src/css/**/*.css' -c 'npm run build:css'",
    "build": "run-s build:clean build:prepare build:html build:img build:font build:js build:css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-kuwahara/riot-ecosystem.git"
  },
  "keywords": [],
